    "format-source-muted": "<span font='20'>Û∞ç≠ </span>",
    "format-icons": {
      "headphone": "Û∞ãé ",
      "hands-free": "Ôüè",
      "headset": "Û∞ãé ",
      "phone": "Û∞è≤ ",
      "portable": "Û∞è≤ ",
      "car": "ÔÜπ ",
      "default": ["ÔÄ¶", "ÔÄß ", "ÔÄ® "]
    },
    "scroll-step": 5.0,
    "on-click": "pamixer -t",
