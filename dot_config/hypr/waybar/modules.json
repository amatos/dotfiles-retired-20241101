    "on-click-middle": "pavucontrol",
    "on-scroll-up": "~/.config/hypr/scripts/volume --inc",
    "on-scroll-down": "~/.config/hypr/scripts/volume --dec",
    "smooth-scrolling-threshold": 1
  },

  "custom/cputemp": {
    "format": "<span font='20'>Ôãã</span><span font='17'>{} </span>",
    "exec": "~/.config/hypr/scripts/cputemp",
    "interval": 15
  },

  "tray": {
    "spacing": 10,
    "icon-size": 20
  },

  "hyprland/window": {
    "format": "<span font='20'>‚Åô</span><span font='17'>{}</span><span font='20'>‚Åô </span>",
