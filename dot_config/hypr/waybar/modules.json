    "format-icons": ["Û∞Éû ", "Û∞Éù ", "Û∞Éü ", "Û∞É† "],
    "on-scroll-up": "~/.config/hypr/scripts/brightness --inc",
    "on-scroll-down": "~/.config/hypr/scripts/brightness --dec",
    "smooth-scrolling-threshold": 1
  },

  "hyprland/submap": {
    "format": "<span font='20'>Û∞ò≤</span><span font='17'>{} </span>",
    "max-length": 30,
    "tooltip": false
  },

  "hyprland/workspaces": {
    "format": "{icon}",
    "on-click": "activate",
    "format-icons": {
      "4": "ÔêØ ",
      "5": "ÔÄÅ ",
      // "1": "ÔÉ® ",
      // "2": "Ôâ© ",
      // "3": "Ôíâ ",
      // "5": "Û±É∂ ",
      // "6": "ÔÇõ ",
      // "7": "Û∞äª ",
      // "8": "Ôíâ ",
      // "9": "ÔÜí ",
      "urgent": "ÔÅ™ ",
      "active": "ÔÜí ",
      "default": "ÔÑë "
      //"default": "ÔÜí ",
    },
    "all-outputs": false,
    "active-only": false,
    //"show-special": true,
    //"special-visible-only": true,
    "sort-by-number": true,
    "persistent-workspaces": {
      "*": 5
    },
    "on-scroll-up": "hyprctl dispatch workspace e+1",
    "on-scroll-down": "hyprctl dispatch workspace e-1"
  },

  "battery": {
    "interval": 60,
    "align": 0,
    "rotate": 0,
    "full-at": 100,
    "design-capacity": false,
    "states": {
      "good": 95,
      "warning": 30,
      "critical": 15
    },
    "format": "<span font='20'>{icon}</span><span font='17'>{capacity} </span>",
    "format-charging": "<span font='20'>Û∞ÇÑ</span><span font='17'>{capacity} </span>",
    "format-plugged": "<span font='20'>Û±ê•</span><span font='17'>{capacity} </span>",
    "format-full": "<span font='20'>{icon} </span>",
    "format-alt": "<span font='20'>{icon}</span><span font='17'>{time} </span>",
    "format-icons": ["Û∞Åª", "Û∞ÅΩ", "Û∞Åø", "Û∞ÇÅ", "Û∞Åπ"],
    "format-time": "{H}h {M}min",
    "tooltip": true,
    "on-click-middle": "~/.config/hypr/scripts/swallowToggle"
  },

  "clock": {
    "interval": 60,
    "align": 0,
    "rotate": 0,
    "format": "<span font='17'>{:%d %b</span><span font='20'>‚Åô</span><span font='17'>%H:%M %p}</span>",
    "format-alt": "<span font='17'>{:%A‚Åô%d %B %Y‚Åô%I:%M %p}</span>",
    "timezone": "America/New_York",
    //"tooltip-format": "<tt><small>{calendar}</small></tt>",
    "calendar": {
      "mode": "year",
      "mode-mon-col": 3,
      "weeks-pos": "right",
      "on-scroll": 1,
      "format": {
        "months": "<span color='#ffead3'><b>{}</b></span>",
        "days": "<span color='#ecc6d9'><b>{}</b></span>",
        "weeks": "<span color='#99ffdd'><b>W{}</b></span>",
        "weekdays": "<span color='#ffcc66'><b>{}</b></span>",
        "today": "<span color='#ff6699'><b><u>{}</u></b></span>"
      }
    },
    "tooltip-format": "<big>{:%B %Y}</big>\n<tt><small>{calendar}</small></tt>"
    // "on-click-right": "~/.config/hypr/scripts/changeHyprpaper"
  },

  "cpu": {
    "interval": 5,
    "format": "<span font='20'>Ôíº</span><span font='17'>{usage}% </span>",
    "format-alt": "<span font='20'>{icon0}{icon1}{icon2}{icon3}</span><span font='17'>{usage:>2}% </span>",
    "format-icons": ["‚ñÅ", "‚ñÇ", "‚ñÉ", "‚ñÑ", "‚ñÖ", "‚ñÜ", "‚ñá", "‚ñà"]
  },

  "custom/menu": {
    "format": "<span font='20'>Û∞çú</span>",
    "tooltip": false,
    "on-click": "$HOME/.config/hypr/scripts/menu"
  },

  "custom/power": {
    "format": "<span font='20'> ÔÄë </span>",
    "tooltip": false,
    "on-click": "wlogout -p layer-shell"
  },

  "disk": {
    "interval": 30,
    "format": "<span font='20'>ÔÇ†</span><span font='17'>{free} </span>",
    "format-alt": "<span font='20'>ÔÇ†</span><span font='17'>{percentage_free}% </span>"
  },

  "memory": {
    "interval": 10,
    "format": "<span font='20'>ÓØ§</span><span font='17'>{used:0.1f}G </span>",
    "format-alt": "<span font='20'>ÓØ§</span><span font='17'>{}% </span>"
  },

  "network": {
    "interval": 5,
    "format-wifi": "<span font='20'>Û∞ñ©</span><span font='17'>{signalStrength}% </span>",
    "format-ethernet": "<span font='20'>Û∞àÄ</span><span font='17'>{ipaddr}/{cidr} </span>",
