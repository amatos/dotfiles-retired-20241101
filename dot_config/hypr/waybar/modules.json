    "format-disconnected": "<span font='20'>Û±öµ</span><span font='17'>Disconnected </span>",
    "format-disabled": "<span font='20'>Û∞ñ™</span><span font='17'>Disabled </span>",
    "format-alt": "<span font='20'>Ó´É</span><span font='17'>{bandwidthUpBits} | <span font='20'>Ó´Ç</span>{bandwidthDownBits} </span>",
    "tooltip-format": "<span font='20'>ÔîÇ</span><span font='17'>{ifname} {essid} via {gwaddr} </span>",
    "on-click-middle": "~/.local/bin/mmuvpn up cbj",
    "on-click-right": "kitty --class update -T update -1 -e nmtui"
  },

  "custom/weather": {
    "tooltip": true,
    "format": "{}",
    "interval": 300,
    "exec": "~/.config/hypr/scripts/wttr.py",
    "return-type": "json"
